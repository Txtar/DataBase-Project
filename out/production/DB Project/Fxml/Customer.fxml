<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.CustomerController" prefHeight="600.0" prefWidth="800.0">
    <children>
        <VBox alignment="CENTER" spacing="10.0" prefHeight="600.0" prefWidth="800.0">
            <children>
                <Label text="Customer Management" style="-fx-font-size: 24px; -fx-text-fill: #333;">
                    <VBox.margin>
                        <Insets top="20.0" bottom="20.0" />
                    </VBox.margin>
                </Label>
                <HBox spacing="15.0" alignment="CENTER">
                    <children>
                        <Label text="Customer ID:" />
                        <TextField fx:id="customerIDTxt1" promptText="Enter ID" />
                        <Label text="Customer Name:" />
                        <TextField fx:id="customerNameTxt1" promptText="Enter Name" />
                        <Button text="Search" onAction="#searchCustomers" minWidth="80.0" />
                    </children>
                </HBox>
                <HBox spacing="15.0" alignment="CENTER">
                    <children>
                        <Button fx:id="addNewCustomerButton" text="Add New Customer" onAction="#addNewCustomer" minWidth="150.0" />
                        <Button fx:id="updateCustomersButton" text="Update Customer" onAction="#updateCustomer" minWidth="150.0" />
                        <Button fx:id="showCustomersButton" text="Show All Customers" onAction="#loadCustomers" minWidth="150.0" />
                    </children>
                </HBox>
                <TableView fx:id="customerTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="cmID" text="Customer ID" prefWidth="80.0" />
                        <TableColumn fx:id="cmName" text="Customer Name" prefWidth="150.0" />
                        <TableColumn fx:id="cmAddress" text="Address" prefWidth="180.0" />
                        <TableColumn fx:id="cmPhonenumber" text="Phone Number" prefWidth="120.0" />
                        <TableColumn fx:id="cmAccount" text="Account" prefWidth="100.0" />
                        <TableColumn fx:id="cmTotalPrice" text="Total Price" prefWidth="100.0" />
                    </columns>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>