<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" spacing="10" padding="10">
    <!-- Header Section -->
    <HBox spacing="10">
        <Label text="Customer Management" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    </HBox>

    <!-- Form Section -->
    <GridPane hgap="10" vgap="10" padding="10">
        <Label text="Customer ID:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="txtCustomerId" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="txtName" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="txtEmail" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="txtPhone" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
            <Button text="Add Customer" fx:id="btnAdd"/>
            <Button text="Update Customer" fx:id="btnUpdate"/>
        </HBox>
    </GridPane>

    <!-- Table Section -->
    <TableView fx:id="tblCustomers" prefHeight="200">
        <columns>
            <TableColumn text="Customer ID">
                <cellValueFactory><PropertyValueFactory property="customerId"/></cellValueFactory>
            </TableColumn>
            <TableColumn text="Name">
                <cellValueFactory><PropertyValueFactory property="name"/></cellValueFactory>
            </TableColumn>
            <TableColumn text="Email">
                <cellValueFactory><PropertyValueFactory property="email"/></cellValueFactory>
            </TableColumn>
            <TableColumn text="Phone">
                <cellValueFactory><PropertyValueFactory property="phone"/></cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

    <!-- Search Section -->
    <HBox spacing="10">
        <TextField fx:id="txtSearch" promptText="Search by Name or Email"/>
        <Button text="Search" fx:id="btnSearch"/>
    </HBox>
</VBox>
